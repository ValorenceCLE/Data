# Use Python 3.11 on Debian Bookworm as the base image
FROM python:3.11-slim-bookworm

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    g++ \
    make \
    sudo \
    iproute2 \
    network-manager \
    dnsutils \
    inetutils-ping \
    python3-smbus \
    python3-dev \
    python3-setuptools \
    python3-wheel \
    python3-pip \
    libgpiod2 \
    python3-libgpiod \
    python3-systemd \
    i2c-tools \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements file
COPY requirements.txt .

# Install Python dependencies
RUN pip3 install --no-cache-dir -r requirements.txt

# Copy application code
COPY app/ /app/app/
COPY services/ /app/services/
COPY main.py /app/
COPY config.json /app/

# Make sure the main script is executable
RUN chmod +x /app/main.py

# Create directory for logs
RUN mkdir -p /var/log/dpm
RUN chmod -R 777 /var/log/dpm

# Create directory for certificates
RUN mkdir -p /etc/dpm/certs
RUN chmod -R 777 /etc/dpm/certs

# Expose any needed ports (if your app serves HTTP or other services)
# EXPOSE 8000

# Set the entrypoint to the main Python script
CMD ["python3", "main.py"]